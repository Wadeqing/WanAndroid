<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="@dimen/nav_height"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/user_icon_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="10dp"
            android:background="@drawable/nothing" />

        <TextView
            android:id="@+id/about_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="jixiaoyong1995@gmail.com" />

        <LinearLayout
            android:id="@+id/power_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/about_login_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="用户名"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="密码"
                    android:inputType="textPassword"/>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/user_password_re"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:hint="再输一次密码"
                    android:inputType="textPassword"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="登录"
                    android:gravity="center"
                    android:background="@color/colorBottomNav"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:text="注册"/>


            </LinearLayout>

            <!--<ViewStub-->
                <!--android:id="@+id/login_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout="@layout/fragment_about_login" />-->

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/arrow_down"/>

            <TextView
                android:id="@+id/power_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="@color/colorBottomNav"
                android:text="登录/注册" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_settings_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/fr_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏个数： 10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="夜间模式"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/night_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <!--<ViewStub-->
            <!--android:id="@+id/settings_layout"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout="@layout/fragment_about_settings" />-->

    </LinearLayout>
</ScrollView>